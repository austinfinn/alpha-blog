  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from getting updated.</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class:"form-control", placeholder:"Title for your article", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 6, class:"form-control", placeholder:"Please write the body of your article here" %>
      </div>
    </div> 
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class:"btn btn-info btn-lg alpha-blog-btn" %>
          <%= link_to "Cancel", articles_path, class:"btn btn-default btn-lg" %>
        </div>
      </div>
      <% end %>
      
  </div>
</div>

